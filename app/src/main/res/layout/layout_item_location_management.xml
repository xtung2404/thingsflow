<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_space4dp">
        <CheckBox
            android:layout_width="@dimen/_space32dp"
            android:layout_height="@dimen/_space32dp"
            android:id="@+id/cb_location"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_loc_label"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_13"
            android:layout_marginEnd="@dimen/space_screen_super_small"
            android:maxLines="1"
            android:ellipsize="end"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_space32dp"
            android:layout_height="@dimen/_space32dp"
            android:id="@+id/btn_option"
            android:src="@drawable/ic_3_dot"
            android:scaleType="centerInside"/>
    </LinearLayout>
</layout>