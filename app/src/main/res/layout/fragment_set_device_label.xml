<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/assign_gateway_to_group"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_screen_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/helpful_when_lots_of_gateway"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/space_screen_super_small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_label"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_input_gray"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="14dp"
                    android:layout_marginTop="@dimen/space_screen_normal"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_finish"
                android:text="@string/finish"
                android:textColor="@color/white"
                android:paddingVertical="13dp"
                android:background="@color/black"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/space_screen_small"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_another_gateway"
                android:text="@string/add_another_gateway"
                android:textColor="@color/black"
                android:paddingVertical="13dp"
                android:layout_marginTop="@dimen/space_screen_small"
                android:textAllCaps="false"
                android:background="@drawable/bg_white_stroke_black"/>

        </LinearLayout>
    </LinearLayout>

</layout>