<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_screen_small"
                android:layout_marginHorizontal="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_scene_label"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/list_of_flow_scenario"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_subtitle1"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="@dimen/_space24dp"
                    android:layout_height="@dimen/_space24dp"
                    android:id="@+id/btn_update_label"
                    android:src="@drawable/ic_edit"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_space5dp"
                android:text="@string/connect_box_to_create_a_flow_scenario"
                android:textColor="@color/black"
                android:textSize="@dimen/text_overline"
                android:layout_marginStart="40dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/_space32dp"/>
            <com.example.thingsflow.ui.customview.LayoutZoomPan
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/boxLayout">
            </com.example.thingsflow.ui.customview.LayoutZoomPan>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overlay_box_event"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:visibility="visible"   />
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/white"
                android:elevation="8dp"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_space16dp"
                android:paddingTop="@dimen/_space30dp"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_back_overlay_event"
                    android:layout_width="@dimen/_space32dp"
                    android:layout_height="@dimen/_space32dp"
                    android:src="@drawable/ic_back_white"
                    android:background="@color/light_gray"
                    android:padding="@dimen/_space4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_screen_normal"
                    android:text="@string/input_event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_caption" />

                <Spinner
                    android:id="@+id/spinner_event_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_space10dp"
                    android:background="@drawable/bg_text_input_gray"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_screen_small"
                    android:background="@color/gray" />
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            android:text="@string/device_type"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_caption" />

                        <Spinner
                            android:id="@+id/spinner_device_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_space10dp"
                            android:background="@drawable/bg_text_input_gray"
                            android:paddingHorizontal="13dp"
                            android:paddingVertical="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_screen_small"
                            android:text="@string/attribute_of_device"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_caption" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            android:background="@drawable/bg_white_stroke_black"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_space4dp"
                            android:paddingStart="8dp">

                            <EditText
                                android:id="@+id/edt_attr"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="@string/insert_attribute_value"
                                android:textSize="@dimen/text_caption"
                                android:layout_weight="1" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_space32dp"
                                android:layout_height="@dimen/_space32dp"
                                android:src="@drawable/ic_search" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_attr"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_screen_small"
                            android:background="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            android:text="@string/choose_device"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_caption" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="@dimen/_space32dp"
                                android:layout_height="@dimen/_space32dp"
                                android:id="@+id/cb_later"
                                android:button="@drawable/custom_checkbox_emerald"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/later"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_screen_super_small"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="@dimen/_space32dp"
                                android:layout_height="@dimen/_space32dp"
                                android:id="@+id/cb_select_device"
                                android:button="@drawable/custom_checkbox_emerald"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_select_device"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:background="@color/light_gray">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_device_label"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/choose_device_from_list"
                                        android:textStyle="bold"
                                        android:textColor="@color/bg_segment"
                                        android:paddingStart="@dimen/space_screen_super_small"/>

                                    <TextView
                                        android:id="@+id/txt_elm"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_space32dp"
                                    android:layout_height="@dimen/_space32dp"
                                    android:src="@drawable/ic_note"
                                    android:padding="@dimen/_space4dp"
                                    android:layout_marginVertical="@dimen/_space4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_evt_config"
                            android:text="@string/config"
                            android:textAllCaps="false"
                            android:textSize="@dimen/text_button"
                            android:textColor="@color/white"
                            android:background="@color/emerald"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="@dimen/_space48dp" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_edit_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_edit"
            app:backgroundTint="@color/white"
            app:tint="@color/emerald"
            />
    </FrameLayout>
</layout>
