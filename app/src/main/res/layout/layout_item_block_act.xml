<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/box_width"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/padding_box_vertical"
        android:paddingHorizontal="@dimen/padding_box_horizontal"
        android:background="@drawable/bg_light_gray_stroke_blue"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txt_box_act_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_overline"
            android:text="@string/action" />

        <TextView
            android:id="@+id/txt_box_act_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txt_box_act_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_overline"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Loại thiết bị"
            android:visibility="visible" /> <!-- Ban đầu ẩn đi -->

    </LinearLayout>
</androidx.cardview.widget.CardView>