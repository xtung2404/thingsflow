<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_space50dp"
        android:paddingHorizontal="@dimen/_space100dp">
        <include layout="@layout/layout_toolbar"
            android:id="@+id/toolbar"/>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_space100dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textSize="@dimen/text_headline5"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_your_username"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body2"
                android:layout_marginTop="45dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_username"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="14dp"
                    android:textSize="@dimen/text_body2"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_input_gray"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tip_email"
                android:hint="@string/insert_your_email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body2"
                android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_email"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="14dp"
                    android:textSize="@dimen/text_body2"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_input_gray"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/insert_your_password"
                android:textColor="@color/black"
                android:textSize="@dimen/text_body2"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_pwd"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="14dp"
                    android:textSize="@dimen/text_body2"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_input_gray"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_noti"
                android:text="@string/at_least_6_characters"
                android:textSize="@dimen/text_overline"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_continue"
                android:text="@string/to_continue"
                android:textSize="@dimen/text_button"
                android:textColor="@color/white"
                android:paddingVertical="13dp"
                android:background="@color/black"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"/>
        </LinearLayout>

    </LinearLayout>
</layout>